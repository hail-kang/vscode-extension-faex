{
  "name": "faex-vscode",
  "displayName": "faex - FastAPI Exception Validator",
  "description": "Validate exception declarations in FastAPI router endpoints",
  "version": "0.1.0",
  "publisher": "hail-kang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hail-kang/vscode-extension-faex"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "fastapi",
    "python",
    "exception",
    "validator",
    "linter"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "faex.checkCurrentFile",
        "title": "Check Current File",
        "category": "faex"
      },
      {
        "command": "faex.checkWorkspace",
        "title": "Check Workspace",
        "category": "faex"
      },
      {
        "command": "faex.showAllExceptions",
        "title": "Show All Exceptions",
        "category": "faex"
      }
    ],
    "configuration": {
      "title": "faex",
      "properties": {
        "faex.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable faex extension"
        },
        "faex.faexPath": {
          "type": "string",
          "default": "faex",
          "description": "Path to faex executable (e.g., 'faex' or '/path/to/venv/bin/faex')"
        },
        "faex.depth": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum depth for transitive exception analysis"
        },
        "faex.ignore": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Exception classes to ignore"
        },
        "faex.exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/tests/**",
            "**/test_*.py"
          ],
          "description": "Glob patterns for files to exclude from analysis"
        },
        "faex.validateOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Validate files on save"
        },
        "faex.validateOnType": {
          "type": "boolean",
          "default": false,
          "description": "Validate files while typing (may impact performance)"
        },
        "faex.showCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show exception info as CodeLens above endpoints"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "package": "node esbuild.mjs --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"*.{json,mjs}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.{json,mjs}\"",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.24.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "typescript": "^5.3.2"
  }
}
